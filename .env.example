# Application
APP_ENV=production
SERVER_PORT=8080
PUBLIC_URL=https://your-app.railway.app
FRONTEND_URL=https://your-app.railway.app

# Database (Railway will auto-provide)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Railway will auto-provide)
REDIS_URL=redis://host:port

# Translation API Keys
DEEPL_API_KEY=your_deepl_api_key_here
OTRANSLATOR_API_KEY=your_otranslator_api_key_here
OTRANSLATOR_BASE_URL=https://api.otranslator.ai

# JWT Secret (IMPORTANT: Generate secure random string for production!)
# Use: openssl rand -hex 32
JWT_SECRET=generate_secure_random_string_here
ACCESS_TOKEN_TTL=1h
REFRESH_TOKEN_TTL=720h

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id
STRIPE_CURRENCY=eur

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_BUCKET=uploads
STORAGE_REGION=us-east-1
# Optional for S3/MinIO:
# STORAGE_ENDPOINT=https://s3.amazonaws.com
# STORAGE_ACCESS_KEY=your_s3_access_key
# STORAGE_SECRET_KEY=your_s3_secret_key

# File Management
CLEANUP_INTERVAL=1h
FILE_RETENTION=168h

# CORS (use specific origins in production)
ALLOW_ORIGINS=*

# Debug Mode
ENABLE_DEBUG=false
